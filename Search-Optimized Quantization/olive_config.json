{
    "input_model": {
        "type": "PyTorchModel",
        "config": {
            "hf_config": {
                "model_name": "microsoft/BiomedNLP-KRISSBERT-PubMed-UMLS-EL",
                "task": "text-similarity"
            }
        }
    },
    "systems": {
        "local_system": {
            "type": "LocalSystem",
            "config": {
                "accelerators": [
                    {
                        "device": "gpu",
                        "execution_providers": [
                            "CUDAExecutionProvider",
                            "TensorrtExecutionProvider"
                        ]
                    }
                ]
            }
        }
    },
    "data_configs": [
        {
            "name": "medsts_dataset",
            "type": "HuggingfaceContainer",
            "load_dataset_config": {
                "params": {
                    "data_name": "medsts",
                    "subset": "default",
                    "split": "validation"
                }
            },
            "pre_process_data_config": {
                "params": {
                    "input_cols": [
                        "sentence1",
                        "sentence2"
                    ],
                    "label_cols": [
                        "score"
                    ]
                }
            },
            "dataloader_config": {
                "params": {
                    "batch_size": 1
                }
            }
        }
    ],
    "evaluators": {
        "common_evaluator": {
            "metrics": [
                {
                    "name": "mse",
                    "type": "mse",
                    "backend": "huggingface_metrics",
                    "data_config": "medsts_dataset",
                    "sub_types": [
                        {
                            "name": "mse",
                            "priority": 1,
                            "goal": {
                                "type": "min-improvement",
                                "value": 0.01
                            }
                        }
                    ]
                },
                {
                    "name": "pearson",
                    "type": "pearson",
                    "backend": "huggingface_metrics",
                    "data_config": "medsts_dataset",
                    "sub_types": [
                        {
                            "name": "pearson",
                            "priority": 1,
                            "goal": {
                                "type": "max-improvement",
                                "value": 0.01
                            }
                        }
                    ]
                },
                {
                    "name": "accuracy",
                    "type": "accuracy",
                    "backend": "huggingface_metrics",
                    "data_config": "medsts_dataset",
                    "sub_types": [
                        {
                            "name": "accuracy_score",
                            "priority": 1,
                            "goal": {
                                "type": "max-degradation",
                                "value": 0.01
                            }
                        }
                    ]
                },
                {
                    "name": "precision",
                    "type": "precision",
                    "backend": "huggingface_metrics",
                    "data_config": "medsts_dataset"
                },
                {
                    "name": "recall",
                    "type": "recall",
                    "backend": "huggingface_metrics",
                    "data_config": "medsts_dataset"
                },
                {
                    "name": "f1",
                    "type": "f1",
                    "backend": "huggingface_metrics",
                    "data_config": "medsts_dataset"
                },
                {
                    "name": "latency",
                    "type": "latency",
                    "backend": "huggingface_metrics",
                    "data_config": "medsts_dataset",
                    "sub_types": [
                        {
                            "name": "avg",
                            "priority": 2,
                            "goal": {
                                "type": "percent-min-improvement",
                                "value": 20
                            }
                        },
                        {
                            "name": "max" },
                        {
                            "name": "min" }
                    ],
                    "user_config": {
                        "io_bind": true
                    }
                }
            ]
        }
    },
    "passes": {
        "conversion": {
            "type": "OnnxConversion",
            "target_opset": 14
        },
        "transformers_optimization": {
            "type": "OrtTransformersOptimization",
            "float16": true
        },
        "session_params_tuning": {
            "type": "OrtSessionParamsTuning",
            "data_config": "medsts_dataset",
            "io_bind": true,
            "trt_fp16_enable": false
        }
    },
    "pass_flows": [
        [ "conversion", "transformers_optimization", "session_params_tuning" ],
        [ "conversion", "session_params_tuning" ]
    ],
    "engine": {
        "search_strategy": {
            "execution_order": "joint",
            "search_algorithm": "tpe",
            "search_algorithm_config": {
                "num_samples": 1,
                "seed": 0
            }
        },
        "evaluator": "common_evaluator",
        "host": "local_system",
        "target": "local_system",
        "cache_dir": "cache",
        "packaging_config": {
            "type": "Zipfile",
            "name": "bert"
        },
        "output_dir": "models/optimized_model"
    }
}